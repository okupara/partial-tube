{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test:app": "lerna exec --scope=@partial-tube/next-app \"yarn test\"",
    "dev:app": "lerna exec --scope=@partial-tube/next-app \"yarn dev:now\"",
    "clean:app": "lerna exec --scope=@partial-tube/next-app \"yarn clean\"",
    "typecheck:app": "lerna exec --scope=@partial-tube/next-app \"yarn typecheck\"",
    "storybook": "lerna exec --scope=@partial-tube/next-app \"yarn storybook\"",
    "gen:gql": "lerna exec --scope=@partial-tube/next-app \"yarn codegen\"",
    "clean": "lerna clean"
  },
  "devDependencies": {
    "lerna": "^3.15.0"
  }
}
