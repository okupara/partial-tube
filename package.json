{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test:core": "lerna exec --scope=@partial-tube/core \"yarn test\"",
    "pack:core": "cd packages/core && yarn pack",
    "dev:app": "lerna exec --scope=@partial-tube/next-app \"yarn dev:now\"",
    "dev:core": "lerna exec --scope=@partial-tube/core \"yarn storybook\"",
    "clean:app": "lerna exec --scope=@partial-tube/next-app \"yarn clean\"",
    "clean:core": "lerna exec --scope=@partial-tube/core \"yarn clean\"",
    "prebuild:core": "yarn clean:core",
    "build:core": "lerna exec --scope=@partial-tube/core \"yarn build\"",
    "typecheck:app": "lerna exec --scope=@partial-tube/next-app \"yarn typecheck\"",
    "typecheck:core": "lerna exec --scope=@partial-tube/core \"yarn typecheck\"",
    "clean": "lerna clean"
  },
  "devDependencies": {
    "lerna": "^3.15.0"
  }
}
